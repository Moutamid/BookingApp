<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PrContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    android:padding="15sp"
    android:elevation="2dp"
    android:background="@drawable/roundbutton"
    >

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        android:text="Time"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:fontFamily="@font/kanit_regular"
        android:text="Name"
        android:textColor="#fff"

        android:layout_marginTop="6dp"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:textColor="#fff"

        android:fontFamily="@font/kanit_regular"
        android:text="Contact No: ********"
        android:layout_marginTop="5dp"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/buzzer_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_number"
        android:fontFamily="@font/kanit_regular"
        android:text="Buzzer Number"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="11dp" />
    <TextView
        android:id="@+id/number_of_guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buzzer_number"
        android:fontFamily="@font/kanit_regular"
        android:text="Number of guests"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="11dp" />
    <TextView
        android:id="@+id/booked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        android:text="Time"
        android:layout_below="@+id/number_of_guests"
        android:textColor="#fff"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/seated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        android:text="Seated"
        android:layout_below="@+id/booked"
        android:textColor="#fff"
        android:textSize="15dp" />
</RelativeLayout>