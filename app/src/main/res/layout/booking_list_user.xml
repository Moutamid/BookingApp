<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PrContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/roundbutton"
    android:backgroundTint="#FFFFFF"
    android:elevation="2dp"
    android:padding="15sp">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        android:text="Time"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/kanit_regular"
        android:text="Name"
        android:textColor="#5E5757"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_regular"
        android:text="Contact NNo: ********"
        android:textColor="#5E5757"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/buzzer_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_number"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_regular"
        android:text="Buzzer Number"
        android:textColor="#5E5757"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/number_of_guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buzzer_number"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_regular"
        android:text="Number of guests"
        android:textColor="#5E5757"
        android:textSize="11dp" />

    <CheckBox
        android:id="@+id/booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_guests"
        android:text="table is ready" />
    <CheckBox
        android:id="@+id/seated"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/number_of_guests"
        android:text="table is seated" />
</RelativeLayout>